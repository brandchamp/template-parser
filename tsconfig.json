{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "keyofStringsOnly": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
